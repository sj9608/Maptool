    "version": "0.2.0",
    "configurations": [
        {
            "name": "Maptool Debugger",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/Maptool.exe)",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/path/to/gdb",
            "setupCommands": [
                {
                    "description": "gdb에 자동 서식 지정 사용",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}